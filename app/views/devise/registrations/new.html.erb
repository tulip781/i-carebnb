<div class="container-fluid" style="background-image: url(<%= asset_path "clouds.jpg" %>);
  background-size: cover; height: 95vh;">
  <div class="container mb-5">
    <div class="row">
      <div class="col-12 col-sm-10 offset-sm-1 mt-5 mb-4 col-lg-6 offset-lg-3">
        <div class="mt-3 p-5 box-design">
          <%= image_tag 'undraw_fall_thyk.svg', class: "ollie-image w-25 float-right" %>
          <h1>Sign up</h1>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :first_name,
                        autofocus: true %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :host, as: :boolean,
                        autofocus: true %>

          </div>
          <div class="form-actions" style="font-family:'alata';">
            <%= f.button :submit, "Sign up", class: 'btn btn-secondary white-font my-1 pb-2 w-100' %>
          </div>
          <% end %><br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
