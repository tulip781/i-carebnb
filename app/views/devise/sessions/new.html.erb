<div class="container-fluid" style="background-image: url(<%= asset_path "clouds.jpg" %>);
  background-size: cover; height: 95vh;">
  <div class="container mb-5">
    <div class="row">
      <div class="col-12 col-sm-10 offset-sm-1 mt-5 mb-4 col-lg-6 offset-lg-3">
        <div class="mt-3 p-5 box-design">
          <%= image_tag 'undraw_fall_thyk.svg', class: "ollie-image w-25 float-right" %>
          <h1>Log In</h1>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">

            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions" style="font-family:'alata';">
            <%= f.button :submit, "Log in", class: 'btn btn-secondary white-font my-3 pb-2 w-100' %>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
          <%#=# image_tag 'undraw_Login_v483.svg', class: "ollie-image2 w-50 float-right" %>
        </div>
      </div>
    </div>
  </div>
</div>
